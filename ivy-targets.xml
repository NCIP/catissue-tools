<?xml version ="1.0"?>
<project name="DynamicExtensions-ivy" 
         xmlns:ivy="antlib:org.apache.ivy.ant">
            
  <property name="ivy.install.version" value="2.2.0"/>
  <property name="ivy.jar.dir" location="ivylib"/>
  <property name="ivy.jar.file" location="${ivy.jar.dir}/ivy-${ivy.install.version}.jar"/>
  <property name="ivy.jar.url"
            value="https://ncimvn.nci.nih.gov/nexus/content/groups/public/org/apache/ivy/ivy/${ivy.install.version}/ivy-${ivy.install.version}.jar"/>
  
  <path id="ivy.classpath">
    <fileset dir="${ivy.jar.dir}">
      <include name="ivy-*.jar" />
    </fileset>
  </path>

  <target name="download-ivy" unless="skip.download">
    <mkdir dir="${ivy.jar.dir}"/>
    <echo message="Installing ivy..."/>
    <get src="${ivy.jar.url}"
         dest="${ivy.jar.file}" 
         usetimestamp="true" 
         verbose="true"/>
  </target>

  <target name="init-ivy" depends="download-ivy">
    <path id="ivy.lib.path">
      <fileset dir="${ivy.jar.dir}" includes="*.jar"/>
    </path>
    <taskdef resource="org/apache/ivy/ant/antlib.xml" 
             uri="antlib:org.apache.ivy.ant" 
             classpathref="ivy.classpath" />                         
  </target>
                 
  <target name="ivy-settings" depends="init-ivy">
    <ivy:settings file="ivysettings.xml"/>
  </target>
  
  <target name="ivy-lib" depends="ivy-settings">
    <ivy:resolve file="ivy.xml"
                 conf="lib" />
    <ivy:retrieve conf="lib"
                  pattern="lib/[artifact]-[revision].[ext]" />
  </target>
  
  <target name="ivy-authz" depends="ivy-settings">
    <ivy:resolve file="ivy.xml"
                 conf="authz" />
    <ivy:retrieve conf="authz"
                  pattern="ext/dependencies/[conf]/jars/[artifact]-[revision].[ext]" />
  </target>  

  <target name="ivy-test" depends="ivy-settings">
    <ivy:resolve file="ivy.xml"
                 conf="test" />
    <ivy:retrieve conf="test"
                  pattern="ext/dependencies/[conf]/jars/[artifact]-[revision].[ext]" />
  </target> 
  
   <target name="ivy-impl" depends="ivy-settings">
     <ivy:resolve file="ivy.xml"
                  conf="impl" />
     <ivy:retrieve conf="impl"
                   pattern="ext/dependencies/[conf]/jars/[artifact]-[revision].[ext]" />
  </target> 
  
    <target name="ivy-sdk31" depends="ivy-settings">
      <ivy:resolve file="ivy.xml"
                   conf="sdk31" />
      <ivy:retrieve conf="sdk31"
                    pattern="ext/dependencies/[conf]/jars/[artifact]-[revision].[ext]" />
  </target>
  
    <target name="ivy-sdk32" depends="ivy-settings">
      <ivy:resolve file="ivy.xml"
                   conf="sdk32" />
      <ivy:retrieve conf="sdk32"
                    pattern="ext/dependencies/[conf]/jars/[artifact]-[revision].[ext]" />
  </target>  
</project>  